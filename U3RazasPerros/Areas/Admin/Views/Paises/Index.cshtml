@model IEnumerable<U3RazasPerros.Models.Paises>
@{
    ViewData["Title"] = "Index";
    Layout = "MasterPageAdmin";
}

<section style="position: relative; width: 100%; height: 40px; float: left; margin: 5px 0;">
    <h1 style="display: block; position: absolute; font-size: 30px; padding: 0; margin: 0;">Paises</h1>
    <a href="~/Admin/Paises/Agregar" style="text-decoration: none; width: 15%; text-align: center; display: block; padding: 3px; background-color: saddlebrown; color: white; border: 1px solid black; position: absolute; right: 0;">
        Agregar
    </a>
</section>
<div id="crudM" style="height:auto; display: block; width: 50%; margin: auto; left: 20%; position: relative;">
    <div id="crudImg" style="top: 15%; width: 100%; display: block; position: absolute;">
    </div>
    @foreach (var p in Model)
    {
        <div style="position: relative; background-color: #247eb0; margin: 5px 0; border: 1px solid black; padding: 5px;">
            <label style="color: white; display: inline-block; width: 40%;">@p.Nombre</label>
            <div style=" right:0; display: inline-block; width: 40%;  position: absolute;">
                <a style="text-align: center; color: white; text-decoration: none; width: 45%; display: inline-block; background-color: saddlebrown; border: 1px solid black;" href="~/Admin/Paises/Editar/@(p.Id)">Editar</a>
                <a style="text-align: center; color: white; text-decoration: none; width: 45%; display: inline-block; background-color: saddlebrown; border: 1px solid black;" href="~/Admin/Paises/Eliminar/@(p.Id)">Eliminar</a>
            </div>
        </div>
    }
</div>
<br class="clear" />